                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Kiralik">Kiralık Araçlar</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Satilik">Satılık Araçlar</a>
